# status bar
hardstatus alwayslastline
hardstatus string '%{= kG}[%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][ %{G}%H %{g}]'

# disable copyright page
startup_message off

# disable flashing
vbell off

# more history!
defscrollback 10000

# allow vim/less/etc to clear output upon exit
altscreen on
